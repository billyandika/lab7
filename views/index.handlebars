        <h2>Customer List</h2>

            <div class="col-lg">

            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>GCIF</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Birthdate</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>

					{{#each projects}}
					<div class="project" id="project{{id}}">
                        <tr data-target="#{{id}}" data-toggle="collapse">
                            <td><button class="btn btn-default btn-xs"><span class=
                            "glyphicon glyphicon-eye-open"></span></button></td>
                            <td>{{cid}}</td>
                            <td>{{name}}</td>
                            <td>{{phone}}</td>
                            <td>{{address}}</td>
                            <td>{{dob}}</td>
                            <td>{{action}}<td>
                        </tr>

                        <tr>
                            <td colspan="12">
                                <div class="collapse" id="{{id}}">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>&nbsp;</th>
                                                <th>Card Type</th>
                                                <th>Card Holder</th>
                                                <th>Last 4 Digits</th>
                                                <th>Zipcode</th>
                                                <th>Expires</th>
                                                <th>Approve?</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr>
                                                <th>&nbsp;</th>
												<td><span class="label label-warning">Visa</span></td>
												<td>{{name}}</td>
                                                <td>8888</td>
                                                <td>19841</td>
                                                <td>Mar 2019</td>
                                                <td><img src="/img/wrong.png" height="20" width="20">&nbsp;<img src="/img/correct.png" height="20" width="20"></td>
                                            </tr>
                                            <tr>
                                                <th>&nbsp;</th>
												<td><span class="label label-default">MasterCard</span></td>
												<td>{{name}}</td>
                                                <td>7890</td>
                                                <td>19841</td>
                                                <td>Dec 2018</td>
                                                <td><img src="/img/wrong.png" height="20" width="20">&nbsp;<img src="/img/correct.png" height="20" width="20"></td>
                                            </tr>
	                                            <tr>
	                                                <th>&nbsp;</th>
													<td>{{ccard.cctype}}</td>
	                                                <td>{{ccard.ccname}}</td>
	                                                <td>{{ccard.digits}}</td>
	                                                <td>{{ccard.zipcode}}</td>
	                                                <td>{{ccard.expiry}}</td>
	                                                <!-- <td>{{card.valid}}</td> -->
	                                            </tr>
                                        </tbody>
