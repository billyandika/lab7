            <div class="col-lg-12">

            <div class="panel-body">
                <table class="table table-condensed" style="border-collapse:collapse;">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>GCIF</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>DOB</th>
                        </tr>
                    </thead>

					{{#each projects}}
					<div class="project" id="project{{id}}">
                    <tbody>
                        <tr class="accordion-toggle" data-target="#{{id}}" data-toggle="collapse">
                            <td><button class="btn btn-default btn-xs"><span class=
                            "glyphicon glyphicon-eye-open"></span></button></td>
                            <td>{{cid}}</td>
                            <td>{{name}}</td>
                            <td>{{phone}}</td>
                            <td>{{dob}}</td>
                        </tr>

                        <tr>
                            <td class="hiddenRow" colspan="12">
                                <div class="accordian-body collapse" id="{{id}}">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>&nbsp;</th>
                                                <th>Card Type</th>
                                                <th>Last 4 digits</th>
                                                <th>Status</th>
                                                <th>Expires</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr>
                                                <th>&nbsp;</th>
												<td>{{card.type}}</td>
                                                <td>{{card.digits}}</td>
                                                <td>{{card.status}}</td>
                                                <td>{{card.expiry}}</td>
                                            </tr>
                                             <tr>
                                                <th>&nbsp;</th>
												<td>Visa</td>
                                                <td>8888</td>
                                                <td>Active</td>
                                                <td>Mar 2019</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    </div>
					{{/each}}

                </table>
            </div>
    </div>

    </div>



    <script src="https://code.jquery.com/jquery.js"></script> 
    <script src="/js/bootstrap.min.js"></script> 
    <script src="/js/introHCI.js"></script>
</body>
</html>